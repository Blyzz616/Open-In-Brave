{
  "manifest_version": 2,
  "name": "Open in Braveâ„¢",
  "description": "Opens links in Brave Browser from Edge.",
  "version": "1.0",
  "permissions": [
    "nativeMessaging",
    "tabs",
    "contextMenus",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Open in Brave"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
